{
  "name": "@jamadd/react-native-template-ui",
  "version": "0.1.12",
  "description": "React Native Template UI is a collection of UI components designed by JaMa D&D.",
  "source": "./src/index.ts",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/module/index.js",
  "types": "./lib/typescript/commonjs/src/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/typescript/module/src/index.d.ts",
        "default": "./lib/module/index.js"
      },
      "require": {
        "types": "./lib/typescript/commonjs/src/index.d.ts",
        "default": "./lib/commonjs/index.js"
      }
    }
  },
  "files": [
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-template-ui-example",
    "test": "jest",
    "test-snapshot": "jest --updateSnapshot",
    "test-watch": "jest --watch",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it --only-version",
    "release-major": "node scripts/bumpVersion.js major && yarn release-commit",
    "release-minor": "node scripts/bumpVersion.js minor && yarn release-commit",
    "release-patch": "node scripts/bumpVersion.js patch && yarn release-commit",
    "release-commit": "git add . && git commit -m \"v${npm_package_version}\" && git tag v${npm_package_version} && git push origin main --tags"
  },
  "keywords": [
    "reactnativetemplate",
    "react native template",
    "rnt",
    "react-native-template",
    "jamadd",
    "jamad&d",
    "jama",
    "ui library",
    "ui components",
    "ui package",
    "ui",
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JaMaDD/react-native-template-ui.git"
  },
  "author": "JaMaD&D <jameswaitingontheday@gmail.com> (https://reactnativetemplate.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JaMaDD/react-native-template-ui/issues"
  },
  "homepage": "https://github.com/JaMaDD/react-native-template-ui#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@evilmartians/lefthook": "^1.5.0",
    "@jamadd/react-native-template-icons": "^0.4.2",
    "@react-native/babel-preset": "0.82.0",
    "@react-native/eslint-config": "^0.82.0",
    "@release-it/conventional-changelog": "^9.0.2",
    "@shopify/flash-list": "^2.1.0",
    "@shopify/restyle": "^2.4.5",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.12",
    "@types/react-test-renderer": "19.1.0",
    "babel-plugin-react-compiler": "1.0.0",
    "commitlint": "^19.6.1",
    "del-cli": "^5.1.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react-compiler": "^19.1.0-rc.2",
    "eslint-plugin-testing-library": "^7.8.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react": "19.1.1",
    "react-native": "0.82.0",
    "react-native-builder-bob": "^0.40.11",
    "react-native-gesture-handler": "^2.28.0",
    "react-native-reanimated": "^4.1.3",
    "react-native-safe-area-context": "^5.6.1",
    "react-native-worklets": "^0.6.1",
    "react-test-renderer": "19.1.1",
    "release-it": "^17.10.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "@jamadd/react-native-template-icons": ">=0.4.2",
    "@shopify/flash-list": ">=2.1.0",
    "@shopify/restyle": ">=2.4.5",
    "react": ">=19.1.1",
    "react-native": ">=0.82.0",
    "react-native-gesture-handler": ">=2.28.0",
    "react-native-reanimated": ">=4.1.3",
    "react-native-safe-area-context": ">=5.6.1",
    "react-native-worklets": ">=0.6.1"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "<rootDir>/src/test/__mocks__/jestSetup.js",
      "<rootDir>/node_modules/react-native-gesture-handler/jestSetup.js"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!(jest-)?react-native|@react-native|react-native-reanimated)"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "moduleNameMapper": {
      "\\.(ttf)$": "<rootDir>/src/test/__mocks__/file-mock.js"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "esm": true,
          "configFile": true
        }
      ],
      [
        "module",
        {
          "esm": true,
          "configFile": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "create-react-native-library": {
    "languages": "js",
    "type": "library",
    "version": "0.50.3"
  }
}
